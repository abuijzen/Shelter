@model Shelter.Shared.Animal;

@{
      ViewData["Title"] = Model.Name;
}


<form method="post" asp-controller="Shelter" asp-action="DoUpdate">
	<label asp-for="Name">Name:</label><br>
	<input type="text" placeholder="@Model.Name" name="Name"><br>
	<label asp-for="Race">Type: </label><br>
	<input type="text" placeholder="@Model.Race" name="Race"><br>
	<label asp-for="DateOfBirth">Date of Birth: </label><br>
	<input type="text" placeholder="@Model.DateOfBirth" name="DateOfBirth" disabled><br>
	<label asp-for="IsFertile">Fertile: </label><br>
	<input type="text" placeholder="@Model.IsFertile" name="IsFertile" disabled><br>
	<label asp-for="IsKidFriendly">Kid Friendly: </label><br>
	<input type="text" placeholder="@Model.IsKidFriendly" name="IsKidFriendly" disabled><br>
	<label asp-for="IsAnimalFriendly">Animal Friendly: </label><br>
	<input type="text" placeholder="@Model.IsAnimalFriendly" name="IsAnimalFriendly" disabled><br>
	<label asp-for="Since">At shelter since: </label><br>
	<input type="text" placeholder="@Model.Since" name="Since" disabled><br>
	<label asp-for="Bio">Intro: </label><br>
	<input type="text" placeholder="@Model.Bio" name="Bio" disabled><br>
	<label asp-for="Allergies">Allergies: </label><br>
	<input type="text" placeholder="@Model.Allergies" name="Allergies" disabled><br>
	<input asp-for="Id" type="hidden">
	<input type="submit" value="Update"><br>
</form>
